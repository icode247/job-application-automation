{
  "name": "job-automation-extension",
  "version": "2.1.0",
  "description": "Multi-platform job application automation",
  "main": "background/background.js",
  "scripts": {
    "build": "node bundler.js",
    "build:dev": "node bundler.js --no-obfuscate",
    "watch": "node bundler.js --watch",
    "watch:dev": "node bundler.js --watch --no-obfuscate",
    "clean": "rm -rf dist/",
    "package": "npm run build && cd dist && zip -r ../extension-ready.zip .",
    "dev": "npm run build:dev && echo 'Load dist/ folder in Chrome extensions'",
    "start": "npm run watch:dev"
  },
  "devDependencies": {
    "chokidar": "^3.6.0",
    "javascript-obfuscator": "^4.1.1"
  },
  "keywords": [
    "chrome-extension",
    "job-automation",
    "linkedin",
    "indeed",
    "glassdoor"
  ],
  "license": "MIT"
}
