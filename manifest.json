{
  "manifest_version": 3,
  "name": "Window-Specific Automation Demo",
  "version": "1.0",
  "description": "Demonstrates running automation only in extension-opened windows",
  
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "scripting"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Window Automation Demo"
  },
  
  "host_permissions": [
    "<all_urls>"
  ]
}